<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ch.awae.esgcal.core.fx.publish.PublishingEventSelectionController"
fx:id ="pane">

    <stylesheets>
        <URL value="@../../css/EventSelection.css"/>
    </stylesheets>

    <padding>
        <Insets top="20" bottom="20" />
    </padding>

    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="20"/>
            </padding>
            <Label>Termine auswählen</Label>
        </HBox>
    </top>

    <center>
        <TabPane fx:id="tabs"/>
    </center>

    <bottom>
        <BorderPane>
            <padding>
                <Insets right="20" left="20" />
            </padding>
            <left>
                <Button onAction="#onBack">Zurück</Button>
            </left>
            <right>
                <Button onAction="#onExecute">Ausführen</Button>
            </right>
        </BorderPane>
    </bottom>


</BorderPane>
